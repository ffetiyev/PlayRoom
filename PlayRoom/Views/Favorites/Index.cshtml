                                        }
                                    </div>

                                </div>
                                <div class="add-basket">
                                    <button class="add-basket-btn" type="submit" product-type="accessory" data-id="@item.Id">SƏBƏTƏ AT</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </section>
</main>