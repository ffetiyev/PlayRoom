@{
    ViewData["Title"] = "Error";
}

@section css {
    <link rel="stylesheet" href="~/assets/css/register/register.css">
}
<main style="padding:100px 0px 100px 0px">
    <section id="register-section">
        <div class="container-xxl">
            <div class="main-area">
                <h1 style="display: flex;justify-content: center;">Oops! Something went wrong.</h1>
                <p style="display: flex;justify-content: center;">@ViewData["ErrorMessage"]</p>
                <p style="display: flex;justify-content: center;">Please try again later or contact support.</p>
            </div>
        </div>
    </section>
</main>