@model PaginateResponse<GameVM>

@section css {
    <link rel="stylesheet" href="~/assets/css/games/games.css">
}

<main>
    <section id="main-top">
        <div class="container-xxl">
            <div class="path">
                <a href="./home.html">Ana səhifə</a>
                <span> > </span>
                <a href="./consoles.html">Oyunlar</a>
            </div>
            <div class="page-topic">
                <h3>Oyunlar</h3>
            </div>
            <div class="product-filters">
                <div class="reset-filter">
                    <span>Filterlər</span>
                    <button>Sıfırla</button>
                </div>
                <div class="filters">
                    <div class="row">
                        <div class="col-xl-2 col-lg-3 col-6 filter">
                            <div class="filter-main category">
                                <span>Kateqoriya</span>
                                <i class="fa-solid fa-chevron-down close" aria-hidden="true"></i>
                                <div class="categories d-none">
                                    <ul>
                                        <li>Playstation</li>
                                        <li>Xbox</li>
                                        <li>Nintendo</li>
                                        <li>Oculus</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-3 col-6 filter">
                            <div class="filter-main price-filter">
                                <span>Qiymət aralığı</span>
                                <i class="fa-solid fa-chevron-down close" aria-hidden="true"></i>
                                <div class="prices d-none">
                                    <ul>
                                        <li>0 ₼ - 50 ₼</li>
                                        <li>50 ₼ - 75 ₼</li>
                                        <li>75 ₼ - 100 ₼</li>
                                        <li>100 ₼ - 1500 ₼</li>
                                        <li>150 ₼ - 1000 ₼</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-2 mt-lg-0 mt-4 col-lg-3 col-6 filter">
                            <div class="filter-main type-filter">
                                <span>Növü</span>
                                <i class="fa-solid fa-chevron-down close" aria-hidden="true"></i>
                                <div class="types d-none">
                                    <ul>
                                        <li>Standart Edition</li>
                                        <li>Digital Edition</li>
                                        <li>Black Edition</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-3 mt-lg-0 mt-4 col-6 filter">
                            <div class="filter-main order-filter">
                                <span>Sırala</span>
                                <i class="fa-solid fa-chevron-down close" aria-hidden="true"></i>
                                <div class="orders d-none">
                                    <ul>
                                        <li>Yenilər əvvəlcə</li>
                                        <li>Əvvəlcə ucuz</li>
                                        <li>Əvvəlcə bahalı</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="products">
                <div class="row">
                      @foreach (var item in Model.Datas)
                    {
                        <div class="col-lg-3 col-6 product">
                            <div class="card-main">
                                <div class="card-top">
                                    <a href="">
                                        <img src="~/assets/images/Game-Images/@item.GameImages.FirstOrDefault(m=>m.IsMain==true).Name" alt="">
                                    </a>
                                    @if (item.CreatedDate > DateTime.Now.AddYears(-1))
                                    {
                                        <div class="new">
                                            <span>YENI</span>
                                        </div>
                                    }
                                    @if (item.GameDiscounts != null && item.GameDiscounts.Any())
                                    {
                                        <div class="discount">
                                            <span>ENDIRIM</span>
                                        </div>
                                    }
                                    <div class="like">
                                        <i class="fa-solid fa-heart"></i>
                                    </div>

                                </div>
                                <div class="card-bottom">
                                    <div class="game-name">
                                        <a href="">
                                            @item.Name
                                            @if (item.GameCategory.Any())
                                            {
                                                @($" ({string.Join(", ", item.GameCategory.Select(c => c.Name))})")
                                            }
                                        </a>
                                    </div>
                                    <div class="game-price mt-4">
                                        @if (item.GameDiscounts != null && item.GameDiscounts.Any())
                                        {
                                            <span class="old-price">@item.Price.ToString("F0") ₼</span>
                                            <span class="price">
                                                @((item.Price - item.GameDiscounts.Max(m => m.Value) * item.Price / 100).ToString("F0")) ₼
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="price">@item.Price.ToString("F0") ₼</span>
                                        }
                                    </div>
                                </div>
                                <div class="add-basket">
                                    <button>SƏBƏTƏ AT</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="pagination-part">
                <div class="pagination">
                    <a asp-controller="Games" asp-action="Index" asp-route-id="@(Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1)"
                       class="page-arrow">
                        <i class="fa-solid fa-arrow-left"></i>
                    </a>
                    @for (int i = 1; i <= Model.TotalPage; i++)
                    {
                        <a asp-controller="Games" asp-action="index" asp-route-id="@i" class="page-value @(Model.CurrentPage == i ? "active" : "")" data-id="@i">@i</a>
                    }
                    <a asp-controller="Games" asp-action="Index" asp-route-id="@(Model.CurrentPage < Model.TotalPage ? Model.CurrentPage + 1 : Model.TotalPage)"
                       class="page-arrow">
                        <i class="fa-solid fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>

@section js {
    <script src="~/assets/js/games.js"></script>
}